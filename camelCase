import math
import os
import random
import re
import sys

#
# Complete the 'camelcase' function below.
#
# The function is expected to return an INTEGER.
# The function accepts STRING s as parameter.
#

def camelcase(s):
    # Start with 1 word, since the first word is always lowercase
    word_count = 1
    
    # Iterate over each character in the string
    for char in s:
        # If the character is uppercase, it signifies a new word
        if char.isupper():
            word_count += 1
            
    return word_count

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    s = input()

    result = camelcase(s)

    fptr.write(str(result) + '\n')

    fptr.close()
